{
	"name": "@rebuildjs/tailwindcss",
	"version": "0.1.61",
	"description": "Tailwindcss integration with rebuildjs",
	"keywords": [
		"tailwindcss",
		"reactive",
		"multi page apps",
		"web app",
		"web server",
		"esbuild",
		"rmemo",
		"ctx-core"
	],
	"homepage": "https://github.com/rebuildjs/tailwindcss#readme",
	"bugs": {
		"url": "https://github.com/rebuildjs/tailwindcss/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rebuildjs/tailwindcss.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"files": [
		"*.d.ts",
		"*.js",
		"*.json",
		"rebuild_tailwind_plugin"
	],
	"types": "./index.d.ts",
	"exports": {
		".": "./index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": ":",
		"clean": ":",
		"exec": "$@",
		"prepublishOnly": "pnpm clean && pnpm build && pnpm test",
		"test": "pnpm test:unit && pnpm test:types",
		"test:types": "check-dts",
		"test:unit": "NODE_OPTIONS=--loader=esmock tsx node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"test:unit:coverage": "c8 pnpm test:unit"
	},
	"dependencies": {
		"ctx-core": "^5.27.1",
		"esbuild": "^0.19.12",
		"postcss": "^8.4.33",
		"rebuildjs": "^0.46.5",
		"tailwindcss": "^3.4.1"
	},
	"devDependencies": {
		"c8": "^9.1.0",
		"check-dts": "^0.7.2",
		"esmock": "^2.6.2",
		"relementjs": "^0.53.5",
		"tsx": "^4.7.0",
		"typescript": "next",
		"uvu": "^0.5.6"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	},
	"sideEffects": false
}